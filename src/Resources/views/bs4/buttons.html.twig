{% macro button(label, url, icon, variant, tooltip, blank, disabled, icon_prefix) %}
  {% apply spaceless %}
    <div class="d-inline-block"
        {% if tooltip|default('') is not empty %}
          data-toggle="tooltip" title="{{ tooltip }}"
        {% endif %}
    >
      <a href="{{ url|default('#') }}"
         class="btn btn-{{ variant|default('primary') }}
         {% if disabled|default(false) %} disabled{% endif %}"
          {% if blank|default(false) %} target=" _blank" {% endif %}
      >
        <i class="{{ icon_prefix|default('fas fa-fw') }} {{ icon }}"></i>
        {{ label|trans }}
      </a>
    </div>
  {% endapply %}
{% endmacro %}

